<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="ToolbarTitle">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/colorOnPrimary</item>
        <item name="android:fontFamily">@font/poppins_semibold</item>
    </style>

    <style name="InfoTitle">
        <item name="android:textSize">17sp</item>
        <item name="android:textColor">@color/colorOnPrimary</item>
        <item name="android:fontFamily">@font/poppins_semibold</item>
    </style>

    <style name="NewsTitle" parent="Widget.AppCompat.TextView">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/colorOnPrimary</item>
        <item name="android:fontFamily">@font/poppins_medium</item>
    </style>

    <style name="TimeTitleInNewsItem" parent="Widget.AppCompat.TextView">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/colorOnPrimary</item>
        <item name="android:fontFamily">@font/poppins_medium</item>
    </style>

    <style name="ErrorTitle">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/colorOnError</item>
        <item name="android:fontFamily">@font/poppins_semibold</item>
        <item name="android:textStyle">bold</item>
    </style>

</resources>