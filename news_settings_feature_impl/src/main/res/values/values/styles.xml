<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="TitleInDetailsContainer" parent="Widget.AppCompat.TextView">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/colorTextPrimaryVariant</item>
        <item name="android:fontFamily">@font/poppins_medium</item>
    </style>

    <style name="ButtonInDetailsContainer" parent="Widget.MaterialComponents.Button">
        <item name="background">@drawable/background_button</item>
        <item name="android:backgroundTint">@color/colorSecondary</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/colorOnSecondary</item>
        <item name="android:textSize">14sp</item>
        <item name="android:fontFamily">@font/poppins</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="ToolbarTitle">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/colorOnPrimary</item>
        <item name="android:fontFamily">@font/poppins_semibold</item>
    </style>

    <style name="ErrorTitle">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/colorOnError</item>
        <item name="android:fontFamily">@font/poppins_semibold</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="ActiveCategoryItemText">
        <item name="android:textSize">12sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/active_category_item_text_color</item>
        <item name="android:fontFamily">@font/poppins</item>
    </style>

    <style name="InActiveCategoryItemText" parent="Widget.AppCompat.TextView">
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@color/inactive_category_item_text_color</item>
        <item name="android:fontFamily">@font/poppins</item>
    </style>

    <style name="NewsTitle" parent="Widget.AppCompat.TextView">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/colorOnPrimary</item>
        <item name="android:fontFamily">@font/poppins_medium</item>
    </style>

    <style name="TimeTitleInNewsItem" parent="Widget.AppCompat.TextView">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/colorOnPrimary</item>
        <item name="android:fontFamily">@font/poppins_medium</item>
    </style>

    <style name="TimeTitleInDetails" parent="Widget.AppCompat.TextView">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/colorOnPrimary</item>
        <item name="android:fontFamily">@font/poppins_medium</item>
    </style>

</resources>